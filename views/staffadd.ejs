<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>staff</title>
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
    <div style="width: 30%; height:100px;margin-left:30%; margin-top: 0%;">
        <div style="font-size: 30px; background-color:aliceblue; width: 100%; height:100px;">
            <center>社員情報システム</center>
        </div>
    </div>
    <div id="app">
        <div style="background-color:aliceblue; width: 30%; margin-left:30%;">
            <table class="table basicinfo-table table-hover">
                <thead>
                  <tr>
                    <td>社員ID:<input type="text" class="form-control" id="name" placeholder="社員ID" v-model="staffid">
                  </td>
                  </tr>
                  <tr>
                    <td>名前:<input type="text" class="form-control" id="name" placeholder="名前" v-model="name">
                  </td>
                </tr>
                <tr>
                    <td>フリガナ:<input type="text" class="form-control" id="name" placeholder="フリガナ" v-model="furigana">
                  </td>
                  </tr>
                  <tr>
                    <td>入社年月日:<input type="text" class="form-control" id="name" placeholder="入社年月日" v-model="enterdate">
                  </td>
                </tr>
                <tr>
                    <td>メール:<input type="text" class="form-control" id="name" placeholder="メール" v-model="mail">
                  </td>
                </tr>
                <tr>
                    <td>住所:<input type="text" class="form-control" id="name" placeholder="住所" v-model="address">
                  </td>
                  </tr>
                </thead>
              </table>
              <div class="container">
                <button type="button" class="btn btn-primary" v-on:click="add" >登録</button>
                <button type="button" class="btn btn-primary" v-on:click="clear">キャンセル</button>
              </div>     
      </div>
</div>

    <script src="https://unpkg.com/vue/dist/vue.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        var vm=new Vue({
          el: '#app',
          data: {
            message: 'Search/Filter In Table',
            staffid:'',
            name:'',
            furigana:'',
            enterdate:'',
            mail:'',
            address:''
          },
          methods:{
            clear:function(){
              this.staffid='';
              this.name='';
              this.furigana='';
              this.enterdate='';
              this.mail='';
              this.address='';
            },
            add:function(){
                //insert
                axios.post('http://127.0.0.1:3333/insert',{ID:this.staffid, NAME:this.name,  FURIGANA:this.furigana, ENTERDATE:this.enterdate, MAIL:this.mail, Address:this.address})
                  .then(window.location.href='http://127.0.0.1:3333/information')
            }
          }
        })
        </script> 
</body>
</html>